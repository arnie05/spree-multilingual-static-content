<% content_for :page_title do %>
  <%= link_to Spree.t(:pages), admin_pages_path %> /
  <%= @page.title %>
<% end %>

<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_product_tabs">
    <%= content_tag :li, class: ('active' if current == :details) do %>
      <%= link_to_with_icon 'edit', Spree.t(:details), edit_admin_page_url(@page) %>
    <% end if can?(:admin, Spree::Page) %>
    <%= content_tag :li, class: ('active' if current == :translations) do %>
      <%= link_to_with_icon 'translate', Spree.t(:'i18n.translations'), spree.admin_translations_url('pages', @page), title: Spree.t(:'i18n.translations') %>
    <% end if can?(:admin, Spree::Page) %>
  </ul>
<% end %>
